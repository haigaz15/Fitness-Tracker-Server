{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "include": ["src/**/*","prisma/**/*"],
  "exclude": ["node_modules", "build"]
}
