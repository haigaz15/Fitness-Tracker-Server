{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "include": ["src/**/*","prisma/**/*"],
  "exclude": ["node_modules", "build"]
}
